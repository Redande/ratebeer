<p id="notice"><%= notice %></p>

<h2>
  <%= @user.username %>
</h2>

<p>
  <% if @user.ratings.empty? %>
  This user hasn't made any ratings yet!
  <% else %>
  has made <%= pluralize(@user.ratings.size, 'rating') %> with an average of <%= @user.average_rating %>
  <% end %>
</p>

<p>
  <strong>Ratings</strong>
</p>

<ul>
  <% @user.ratings.each do |rating| %>
    <li>
      <%= rating %>
      <% if @user == current_user %>
        <%= link_to 'delete', rating, method: :delete, data: { confirm: 'Are you sure?' } %>
      <% end %>
    </li>
  <% end %>
</ul>

<p>
  <strong>Beer clubs</strong>
</p>

<ul>
  <% @user.beer_clubs.each do |beer_club| %>
    <li>
      <%= link_to beer_club, beer_club_path %>
    </li>
  <% end %>
</ul>

<% if @user == current_user %>
<%= link_to 'Edit', edit_user_path(@user) %> |
<td><%= link_to 'Destroy', @user, method: :delete, data: { confirm: 'Are you sure?' } %></td> |
<% end %>
<%= link_to 'Back', users_path %>
